
@{
    ViewData["Title"] = "Manage Roles";
}
@model UserRolesViewModel
 
<h1>Manage Roles</h1>


<form method="post" asp-controller="Users" asp-action="ManageRoles">
    <div  class="card mt-4">
        
        <div class="card-header">
            <h2 class="card-title">@Model.UserName</h2>
            <h6 class="card-subtitle text-muted">
                Add/Remove Roles
            </h6>

           
        </div>
        
        <div class="card-body">
            <input type="hidden" asp-for="UserId" />

            @for(var i=0 ; i< Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input"/> 


                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                        @Model.Roles[i].RoleName
                    </label>
                    </div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
