@model ProfileFormViewModel

@{
    ViewData["Title"] = "Edit Profile";
}
    
<form   method="post"  asp-action="Edit">
    @* <div asp-validation-summary="All" class="text-danger" role="alert"></div> *@
      
    <input type="hidden" asp-for="Id"/>

    <div class="form-floating mb-3">
        <input asp-for="FirstName" class="form-control" maxlength="100" placeholder="First Name" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="LastName" class="form-control" maxlength="100" placeholder="Last Name" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="UserName" class="form-control" maxlength="100" placeholder="User Name" />
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Email">Email</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    

    <hr />
    <h6>Roles</h6>
    @for (var i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check m-1">
            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />

            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />


            <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                @Model.Roles[i].RoleName
            </label>
        </div>
    }
    <span asp-validation-for="Roles" class="text-danger"></span>


    <button  type="submit" class="w-100 btn btn-primary mt-4">Save</button>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
